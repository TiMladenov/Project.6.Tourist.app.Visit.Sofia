<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="windowActionBarOverlay">true</item>-->
    </style>

    <style name="TextButtonStyle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">@dimen/button_width_250dp</item>
        <item name="android:layout_height">@dimen/button_height_35dp</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_5dp</item>
        <item name="android:layout_marginTop">@dimen/button_margin_5dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
